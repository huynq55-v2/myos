{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to QEMU",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/kernel/bin-x86_64/kernel",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint at entry point",
                    "text": "break main",  // Thay "main" bằng tên hàm entry point của bạn
                    "ignoreFailures": false
                }
            ],
            "targetArchitecture": "x86_64",,
            "externalConsole": false,
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            }
        }
    ]
}
